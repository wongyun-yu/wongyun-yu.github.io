<style>
	/* Smooth scrolling */
	html {
		scroll-behavior: smooth;
	}
	
	/* Offset for sticky header when scrolling to anchors - adjusted for new header padding */
	.scroll-mt-20 {
		scroll-margin-top: 13rem;
	}
</style>

<script>
	// Function to force scroll to absolute top - no conditions
	function forceScrollToTop() {
		// Always force scroll to the very top (0,0) regardless of hash
		window.scrollTo(0, 0);
		document.documentElement.scrollTop = 0;
		document.body.scrollTop = 0;
		
		// Additional safety check
		if (window.pageYOffset !== 0 || document.documentElement.scrollTop !== 0) {
			document.documentElement.style.scrollBehavior = 'auto';
			window.scrollTo(0, 0);
			document.documentElement.style.scrollBehavior = '';
		}
	}

	// Immediate scroll to top - before DOMContentLoaded
	forceScrollToTop();

	// Enhanced smooth scrolling for anchor links
	document.addEventListener('DOMContentLoaded', function() {
		// Always scroll to top on initial load, regardless of hash
		forceScrollToTop();
		
		// Multiple safety scrolls for initial load
		setTimeout(forceScrollToTop, 10);
		setTimeout(forceScrollToTop, 50);
		setTimeout(forceScrollToTop, 100);
		
		const anchorLinks = document.querySelectorAll('a[href^="#"]');
		
		anchorLinks.forEach(link => {
			link.addEventListener('click', function(e) {
				e.preventDefault();
				const targetId = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
				const targetElement = document.querySelector(targetId!);
				
				if (targetElement) {
					targetElement.scrollIntoView({
						behavior: 'smooth',
						block: 'start'
					});
				}
			});
		});
	});

	// Prevent browser from restoring scroll position
	if ('scrollRestoration' in history) {
		history.scrollRestoration = 'manual';
	}

	// Additional safety for page load
	window.addEventListener('load', forceScrollToTop);
	window.addEventListener('pageshow', forceScrollToTop);

	// Handle hot reload (Astro development) - ALWAYS scroll to top
	if (import.meta.hot) {
		import.meta.hot.on('astro:afterUpdate', () => {
			// Multiple attempts to force scroll to top during hot reload
			forceScrollToTop();
			setTimeout(forceScrollToTop, 10);
			setTimeout(forceScrollToTop, 50);
			setTimeout(forceScrollToTop, 100);
			requestAnimationFrame(() => {
				forceScrollToTop();
				setTimeout(forceScrollToTop, 10);
			});
		});
	}

	// Hot reload detection for development (only during file changes)
	let isHotReloading = false;
	if (import.meta.hot) {
		let lastBodyHeight = document.body.scrollHeight;
		setInterval(() => {
			// Only check during development and when hot reloading
			if (isHotReloading) {
				const currentBodyHeight = document.body.scrollHeight;
				if (currentBodyHeight !== lastBodyHeight) {
					forceScrollToTop();
					lastBodyHeight = currentBodyHeight;
					isHotReloading = false; // Reset flag
				}
			}
		}, 200);

		// Set hot reload flag when Astro updates
		import.meta.hot.on('astro:afterUpdate', () => {
			isHotReloading = true;
		});
	}
</script>
